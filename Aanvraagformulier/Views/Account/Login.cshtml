@model Aanvraagformulier.Models.CustomUser;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="path/to/your/css/styles.css" />
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="text" placeholder="Gebruikersnaam" asp-for="UserName"/>
        <input type="password" placeholder="Wachtwoord" asp-for="PasswordHash"/>

        <button type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>

    <div class="signup-link">
        <p>Heb je nog geen account? <a href="#" asp-controller="Access" asp-action="SignUp">Aanmelden</a></p>
    </div>
</body>
</html>

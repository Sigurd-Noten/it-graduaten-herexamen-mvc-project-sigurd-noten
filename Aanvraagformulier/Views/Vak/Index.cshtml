@model IEnumerable<Aanvraagformulier.Models.Vak>

@{
    ViewData["Title"] = "Overzicht Vakken";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuw Vak Toevoegen</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Verwijderd</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vak in Model)
        {
            <tr>
                <td>@vak.Naam</td>
                <td>@vak.Verwijderd</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@vak.Id" class="btn btn-primary">Bewerken</a>
                    <a asp-action="Delete" asp-route-id="@vak.Id" class="btn btn-danger">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>


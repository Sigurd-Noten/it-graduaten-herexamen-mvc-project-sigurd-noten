@model Aanvraagformulier.Models.Vak

@{
    ViewData["Title"] = "Vak Verwijderen";
}

<h2>@ViewData["Title"]</h2>

<h3>Weet je zeker dat je dit vak wilt verwijderen?</h3>

<div>
    <h4>Vak Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Model.Naam
        </dd>
        <dt class="col-sm-2">
            Verwijderd
        </dt>
        <dd class="col-sm-10">
            @Model.Verwijderd
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Verwijderen</button>
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>

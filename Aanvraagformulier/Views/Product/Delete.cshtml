@model Aanvraagformulier.Models.Product

@{
    ViewData["Title"] = "Product Verwijderen";
}

<h2>@ViewData["Title"]</h2>

<h3>Weet je zeker dat je dit product wilt verwijderen?</h3>

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Model.Naam
        </dd>
        <dt class="col-sm-2">
            Hoeveelheid
        </dt>
        <dd class="col-sm-10">
            @Model.Hoeveelheid
        </dd>
        <dt class="col-sm-2">
            Prijs
        </dt>
        <dd class="col-sm-10">
            @Model.Prijs.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Verwijderen</button>
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>

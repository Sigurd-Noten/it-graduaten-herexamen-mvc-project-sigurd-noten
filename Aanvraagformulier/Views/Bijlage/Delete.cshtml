@model Aanvraagformulier.ViewModels.DeleteBijlageViewModel

@{
    ViewData["Title"] = "Delete Bijlage";
}

<h1>Delete Bijlage</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Bijlage</h4>
    <div>
        <h4>@Model.Naam</h4>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Naam"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Naam
            </dd>
            <dt class="col-sm-2">
                <label asp-for="AankoopId"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.AankoopId
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

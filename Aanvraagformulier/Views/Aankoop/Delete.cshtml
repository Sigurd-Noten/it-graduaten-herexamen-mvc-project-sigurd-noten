@model Aanvraagformulier.Models.Aankoop

@{
    ViewData["Title"] = "Aankoop Verwijderen";
}

<h2>@ViewData["Title"]</h2>

<h3>Weet je zeker dat je deze aankoop wilt verwijderen?</h3>

<div>
    <h4>Aankoop Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Aanvrager
        </dt>
        <dd class="col-sm-10">
            @Model.NaamAanvragerId
        </dd>
        <dt class="col-sm-2">
            Reden
        </dt>
        <dd class="col-sm-10">
            @Model.Reden
        </dd>
        <dt class="col-sm-2">
            Datum
        </dt>
        <dd class="col-sm-10">
            @Model.Datum.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Vak
        </dt>
        <dd class="col-sm-10">
            @Model.VakId
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Verwijderen</button>
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>

@model Aanvraagformulier.ViewModels.AankoopCreateViewModel

@{
    ViewData["Title"] = "Nieuwe Aankoop Aanvraag";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NaamAanvragerId"></label>
        <select asp-for="NaamAanvragerId" class="form-control" asp-items="@(new SelectList(Model.Gebruikers, "Id", "VolledigeNaam"))"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="Datum"></label>
        <input asp-for="Datum" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Reden"></label>
        <textarea asp-for="Reden" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label asp-for="VakId"></label>
        <select asp-for="VakId" class="form-control" asp-items="@(new SelectList(Model.Vakken, "Id", "Naam"))"></select>
    </div>
    
    <!-- Producten en Bijlagen secties kunnen hier worden toegevoegd -->

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

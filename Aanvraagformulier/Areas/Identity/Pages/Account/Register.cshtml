@page
@model RegisterModel

@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Gebruiker aanmaken";
}

<h1>Nieuwe gebruiker aanmaken</h1>

<div class="row">

    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Gebruiker aanmaken</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Voornaam" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Voornaam"></label>
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Achternaam" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Achternaam"></label>
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rollen Toevoegen</label>
                <select class="form-control" multiple="multiple" asp-for="Input.GeselecteerdeRolIds" asp-items="Model.Input.Rollen"></select>
                <span class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registreren</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
